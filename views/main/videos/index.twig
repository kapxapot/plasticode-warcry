{% extends 'main/layout.twig' %}

{% import 'main/macros.twig' as m %}
{% import 'main/local_macros.twig' as lm %}

{% if can('videos', 'create') %}
    {% set sidebar_buttons = [ m.create_button('videos', 'Добавить видео') ] %}
{% endif %}

{% block content %}
    <div class="panel panel-primary">
        {{ lm.panel_header(_context) }}

        {% if videos|length > 0 %}
            <div class="panel-body body-nopad">
                {% include 'components/videos.twig' with { 'videos': videos } only %}
            </div>
        {% else %}
            <div class="panel-body">
                По заданным параметрам видео не найдены.
            </div>
        {% endif %}
    </div>
{% endblock %}
