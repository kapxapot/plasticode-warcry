{% extends 'admin/entity.twig' %}

{% block modal_shown %}
	if ($scope.itemId == 0) {
		init();
	}
	else {
		var textField = $('#entityForm').find('#text');
	
		textField.prop('disabled', true);
		
		$scope.loading = true;
	
		$http.get('{{ api }}articles/' + $scope.itemId).success(function(data) {
			textField.val(data['text']);
			textField.prop('disabled', false);
			
			$scope.loading = false;
			
			init();
		});
	}
{% endblock %}
