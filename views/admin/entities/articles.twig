{% extends 'admin/entity.twig' %}

{% block modal_shown %}
    if ($scope.itemId == 0) {
        init();
    }
    else {
        $scope.loading = true;

        $http.get('{{ api }}articles/' + $scope.itemId).success(function(data) {
            $scope.item.text = data['text'];
            $scope.loading = false;

            init();
        });
    }
{% endblock %}
